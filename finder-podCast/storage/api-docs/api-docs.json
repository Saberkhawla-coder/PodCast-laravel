                    },
                    "genre": {
                        "type": "string",
                        "example": "Technology"
                    },
                    "is_published": {
                        "type": "boolean",
                        "example": true
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2024-10-20T14:32:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "example": "2024-10-20T14:32:00Z"
